@using CalendarPetProject.ViewModels.AccountEnterance;
@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="account-container">
    <div class="account-box">
        <h1 class="text-center mb-4">
            Registration
        </h1>
        <form asp-action="Register" method="post" class="d-flex flex-column">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="Login" class="form-label"></label>
                <br />
                <input asp-for="Login" class="form-control border border-primary w-100" id="account-control-input" />
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <br />
                <input asp-for="Password" value="@ViewBag.GeneratedPassword" class="form-control w-100" id="account-control-input" />
                <span asp-validation-for="Password" class="text-danger"></span>

            </div>
            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label"></label>
                <input asp-for="ConfirmPassword" value="@ViewBag.GeneratedPassword" class="form-control w-100" id="account-control-input" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" name="action" value="generatePassword" class="btn btn-secondary p-1">
                Generate Password
            </button>

            <div class="mb-3">
                <label asp-for="FirstName" class="form-label"></label>
                <br />
                <input asp-for="FirstName" class="form-control border border-primary w-100" id="account-control-input" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="LastName" class="form-label"></label>
                <br />
                <input asp-for="LastName" class="form-control border border-primary w-100" id="account-control-input" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="DateOfBirth" class="form-label"></label>
                <br />
                <input asp-for="DateOfBirth" type="date" class="form-control border border-primary w-100" id="account-control-input" />
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>
            <div class="float-end p-1">
                <a asp-controller="Account" asp-action="Login" class="text-decoration-none">Already have an account</a>
            </div>
            <input type="submit" name="action" value="SignUp" class="btn btn-success w-100 p-2" />
            <div class="text-center mt-2">
            <a asp-controller="Home" asp-action="Index" class="text-decoration-none mt-3 p-4">Back</a>
            </div>
        </form>
    </div>
</div>